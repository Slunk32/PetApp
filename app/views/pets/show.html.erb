<!-- this shows the pup you just created in new.html.erb -->
<div class="signup-wrap">
  <div class="field">
    <p id="notice"><%= notice %></p>
    
    <h2>
      <%= @pet.name %>
    </h2>

    <p>
      <strong>Breed:</strong>
      <%= @pet.breed %>
    </p>

    <p>
      <strong>Size:</strong>
      <%= @pet.size %>
    </p>

    <p>
      <strong>Age:</strong>
      <%= @pet.age %>
    </p>
    <!-- image  -->
    <p>
      <%= link_to image_tag(@pet.image.url(:large)), @pet.image.url %>
    </p>

  </div>
  <div class="link-wrap">
    <% if current_user.user_type == "Pet Pal" %>
      <%= link_to 'New Appointment', new_pet_appointment_path(@pet), :class => "btn btn-primary" %></br>
    <% else %>
      <%= link_to 'Edit', edit_pet_path(@pet) %> |
    <% end %>
    <%= link_to 'Back', pets_path %>
  </div>
</div>
