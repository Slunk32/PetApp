<h1 id="headingfont">Dog Listing</h1>
<hr>
<div class="petlisting">
  <table>
    <thead>
      <tr class="listingrow">
        <th class="listingheader"><i class="fa fa-paw"></i></th>
        <th class="listingheader"><%= sortable "Name"%></th>
        <th class="listingheader"><%= sortable "Breed" %></th>
        <th class="listingheader"><%= sortable "Size" %></th>
        <th class="listingheader"><%= sortable "Age" %></th>
        <th class="listingheader"><%= sortable "Zipcode" %></th>
        <th class="listingheader" colspan="3">Edit</th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
      <tr class="listingrow">
        <td class="listingcell"><%= link_to image_tag(pet.image.url(:large)), pet, :class => "animalimg img-responsive"%></td>
        <td class="listingcell"><%= pet.name %></td>
        <td class="listingcell"><%= pet.breed %></td>
        <td class="listingcell"><%= pet.size %></td>
        <td class="listingcell"><%= pet.age %></td>
        <td class="listingcell"><%= pet.zipcode %></td>
        <!-- a condition that you must be logged in to edit/destroy-->
        <% if pet.user == current_user && current_user.user_type == "Owner" %>
        <td class="action listingcell">
          <%= link_to edit_pet_path(pet) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <td class="action listingcell">
          <%= link_to pet, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
        <% elsif current_user.user_type == "Owner" %>
        <td class="action disabled-links listingcell"></td>
        <td class="action disabled-links listingcell"></td>
        <% elsif current_user.user_type == "Renter"%>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <p id="notice"><%= notice %></p>
</div>
